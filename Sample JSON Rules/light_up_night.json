{
  "name": "Turn light on if it's dark, otherwise turn it off",
  "actions": [
    {
      "if": {
        "less_than": {
          "right": {
            "device": {
              "devices": [
                "{{illuminancesensor1}}"
              ],
              "component": "main",
              "capability": "illuminanceMeasurement",
              "attribute": "illuminance"
            }
          },
          "left": {
            "integer": 30
          }
        }, 
        "then": [
          {
            "command": {
              "devices": [
                "{{light1}}"
              ],
              "commands": [
                {
                  "component": "main",
                  "capability": "light",
                  "command": "on"
                }
              ]
            }
          }
        ],
        "else": [
          {
            "command": {
              "devices": [
                "{{light1}}"
              ],
              "commands": [
                {
                  "component": "main",
                  "capability": "light",
                  "command": "off"
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
